<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classes_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/classes_item_root_layout_margin"
    app:cardCornerRadius="@dimen/classes_item_root_corner_radius"
    app:cardElevation="@dimen/classes_item_root_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/classes_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/classes_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/classes_item_title_margin_start"
            android:layout_marginTop="@dimen/classes_item_title_margin_top"
            android:textSize="@dimen/classes_item_title_text_size"
            app:layout_constraintBottom_toTopOf="@+id/classes_item_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/classes_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/classes_item_title_margin_start"
            android:layout_marginBottom="@dimen/classes_item_time_margin_bottom"
            android:textSize="@dimen/classes_item_time_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classes_item_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/classes_item_skype"
            android:layout_width="@dimen/classes_item_skype_width"
            android:layout_height="0dp"
            android:backgroundTint="@color/purple_700"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/classes_item_root_corner_radius"
            app:cardElevation="@dimen/classes_item_root_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/classes_item_skype_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_mic_24" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>